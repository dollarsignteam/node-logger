{
  "name": "@dollarsign/logger",
  "version": "0.0.0-development",
  "description": "Logger for node",
  "author": "Dollarsign",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "keywords": [
    "logger"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dollarsignteam/node-logger.git"
  },
  "bugs": "https://github.com/dollarsignteam/node-logger/issues",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "tsc && tsc-alias",
    "test": "jest --forceExit --detectOpenHandles",
    "test:cov": "npm run test -- --verbose --coverage",
    "test:watch": "npm run test -- --coverage --watchAll",
    "demo": "ts-node -r tsconfig-paths/register src/example/demo.ts",
    "format": "prettier src/**/*.ts --write",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@dollarsign/utils": "^1.1.1",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "node-gyp": "^8.1.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc-alias": "^1.3.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  }
}
